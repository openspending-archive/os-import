{
  "name": "{{ name }}",
  "title": "{{ title }}",

  "resources": [{{#each resources}}
    {
      "name": "{{ this.filename }}",
      "schema": {{{ this.schema }}},
      "path": "{{ this.path }}",
      "bytes": {{ this.bytes }}
    }{{#unless @last}},{{/unless}}
  {{/each}}],

  "mapping": {
    {{#if amountsource}}"measures": {
      "amount": {
        "currency": "USD",
        "source": "{{ amountsource }}"
      }
    },{{/if}}

    {{#if datetimesource}}"date": {
      "properties": {
        "year": {"source": "{{ datetimesource }}"}
      }
    },{{/if}}

    {{#each mappings}}"{{ name }}": {
      "properties": {
        {{#if idsource}}
          "id": {"source": "{{ idsource }}"}{{#if labelsource}},{{/if}}
        {{/if}}

        {{#if labelsource}}"label": {"source": "{{ labelsource }}"}{{/if}}
      }
    }{{#unless @last}},{{/unless}}{{/each}}
  }
}